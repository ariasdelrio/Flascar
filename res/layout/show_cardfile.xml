<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:padding="20px"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
	
	<TableRow>
	
		<TextView  
    		style="@style/Text" 
    		android:layout_weight=".3"
    		android:text="@string/name"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    		
    	<TextView android:id="@+id/show_cardfile_txtName"
    		android:layout_weight=".7"
    		style="@style/Text" 
    	 	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
	
	</TableRow>

	<TableRow>
	
		<TextView  
    		style="@style/Text" 
    		android:layout_weight=".3"
    		android:text="@string/cf_side_a"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    		
    	<TextView android:id="@+id/show_cardfile_txtSideA"
    		android:layout_weight=".7"
    		style="@style/Text" 
    	 	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    		
	</TableRow>

	<TableRow>
	
		<TextView  
    		style="@style/Text" 
    		android:layout_weight=".3"
    		android:text="@string/cf_side_b"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    		
    	<TextView android:id="@+id/show_cardfile_txtSideB"
    		android:layout_weight=".7"
    		style="@style/Text"
    	 	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>

	</TableRow>
	
</TableLayout>

<LinearLayout 
		android:orientation="horizontal"
		android:layout_weight="1"
		android:gravity="bottom"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
	
		<ImageButton android:src="@drawable/view"
			android:layout_weight="1"
			android:background="@null"
		   	android:onClick="showCards"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    		
    	<ImageButton android:src="@drawable/edit"
    		android:layout_weight="1"
			android:background="@null"
    	   	android:onClick="editCardfile"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    		
</LinearLayout> 

</LinearLayout>
