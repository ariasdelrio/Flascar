<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:padding="20px"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView
		style="@style/TextWhite"
		android:text="@string/name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<EditText
		android:id="@+id/edtName"
		style="@style/Text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<TextView
		style="@style/TextWhite"
		android:text="@string/sense_a"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<EditText
		android:id="@+id/edtSideA"
		style="@style/Text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			style="@style/TextWhite"
			android:text="@string/language_a"
			android:layout_gravity="left"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<Spinner
			android:id="@+id/spnLanguageA"
			android:layout_gravity="right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawSelectorOnTop="true" />

	</LinearLayout>

	<TextView
		style="@style/TextWhite"
		android:text="@string/sense_b"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<EditText
		android:id="@+id/edtSideB"
		style="@style/Text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			style="@style/TextWhite"
			android:layout_gravity="left"
			android:layout_weight="1"
			android:text="@string/language_b"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<Spinner
			android:id="@+id/spnLanguageB"
			android:layout_gravity="right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawSelectorOnTop="true" />

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_weight="1"
		android:gravity="bottom"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<ImageButton
			android:src="@drawable/save_button"
			android:layout_weight="1"
			android:background="@null"
			android:onClick="save"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<ImageButton
			android:src="@drawable/cancel_button"
			android:layout_weight="1"
			android:background="@null"
			android:onClick="cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	</LinearLayout>

</LinearLayout>
